    style.
      body{
      font-family: 'Noto Serif SC', serif;
      margin:0;
      background-image: linear-gradient(#265077,#022140);
      background-attachment: fixed;
      background-position: center;
      background-repeat: no-repeat;
      /*background-size: cover;*/
      height: 100%
      width:100%;
      }
      .full{
      font-family: 'Noto Serif SC', serif;
      margin:0;
      /*background-image:url("https://tseaonline.org/wp-content/uploads/2017/01/haslam-addresses-tsea.jpg") ;*/
      height: 100%;
      width: 100%;
      }
      h1{
      text-align: center;
      color:#D7D7D7/*#E6935F*/;
      background-color:#021EAE;
      padding: 3px;
      }
      td{
      padding: 7px;
      font-size: 18px;
      color: red/*#E3CF5A*/;
      border-radius: 30%;
      }
      .button{
      background-color:#051783;
      color: white;
      border: none;
      font-size: 20px;
      padding: 7px 25px;
