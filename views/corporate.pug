      .myCustomTextarea:hover{
      cursor: pointer;
      box-shadow: 5px 5px 10px darkgreen;
      }
      .text12{
      border-radius: 100%;
      }
  body
    .full
      h1(align='center')  Corporate Events Registration Form 
      form(method='post')
        table(width='100%')
          tbody
            tr
              td.Category  Name of the company 
              td(colspan='2')
                input.rad(type='text', name='companyname', placeholder='Comapany name')
            tr
              td.Category Type of the Event
              td(colspan='2')
                select(name='toe')
                  option(value='meetings') Meetings
                  option(value='proposal') Business Proposals
                  option(value='auction') Auctions
            tr
            tr
            tr
              td.Category Type of the Area
              td(colspan='2')
                select(name='toa')
                  option(value='hall') Hall
                  option(value='auditorium') Auditorium
                  option(value='conference room') Conference Room
            tr
            tr
            tr
              td.Category Start Date & Time
              td
                input#sd.rad(type='datetime-local', name='startdatetime', required='true', aria-hidden='true')
            tr
            tr
            tr
              td.Category End Date & Time
              td
                input#ed.rad(type='datetime-local', name='enddatetime', required='true', aria-hidden='true')
            tr
            tr
            tr
              td.Category Venue Details
              td
                textarea.rad(rows='5', cols='26', name='venuedetails', placeholder='Venue Details')
            tr
            tr
            tr
              td.Category Budget
              td
                input.rad(type='Number', name='budget', required='true', aria-hidden='true', placeholder='Budget', min=500)
            tr
            tr
            tr
              td.Category  Number of people
              td
                input.rad(type='Number', name='people', required='true', aria-hidden='true', placeholder='People count', min=1)
            tr
            tr
            tr
            tr
            tr
              td.Category Description
              td
                textarea.rad(rows='5', cols='26', name='description', placeholder='Description')
            tr
            tr
            tr
              td
              td
                input.button(type='submit', name='submit', onclick='myfun()', value='submit', formaction='corporate_submit')
              td
                input.button(type='reset', name='reset', value='reset')
