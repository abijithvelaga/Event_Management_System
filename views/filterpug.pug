html
  head
    style.
      .left {
      float: left;
      border-right: 1px solid black;
      height: 100%;
      background-color:white;
      width: 20%;
      }
      .right {
      margin-left: 500px;
      margin-top: 100px;
      }
      .multiselect,
      .multiselect2,
      .multiselect3 {
      width: 200px;
      }
      .selectBox {
      position: relative;
      }
      .selectBox select {
      width: 100%;
      height: 30px;
      font-weight: bold;
      }
      .overSelect
      {
      position: absolute;
      left: 0;
      right: 0;
      top: 0;
      bottom: 0;
      }
      #checkboxes {
      display: none;
      border: 1px #dadada solid;
      }
      #checkboxes label {
      display: block;
      }
      #checkboxes label:hover {
      background-color: #1e90ff;
      }
    script.
      var expanded1 = false;
      function showCheckboxes1() {
      var checkboxes = document.getElementById("checkboxes1");
      if (!expanded1) {
      checkboxes.style.display = "block";
      expanded1 = true;
      } else {
      checkboxes.style.display = "none";
      expanded1 = false;
      }
      }
      var expanded2= false;
      function showCheckboxes2() {
      var checkboxes = document.getElementById("checkboxes2");
