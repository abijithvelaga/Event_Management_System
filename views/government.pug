  body
    #image
    h1(align='center')  Government Events Registration Form 
    form(method='post')
      table(width='100%')
        tbody
          tr
            td.Category Type of the Event
            td(colspan='2')
              select(name='toe')
                option(value='workshop') Workshop
                option(value='seminar') Seminar
                option(value='competetions') Competetions
                option(value='Expo') Expo
          tr
          tr
          tr
            td.Category Type of the Area
            td(colspan='2')
              select(name='toa')
                option(value='hall') Hall
                option(value='auditorium') Auditorium
                option(value='computer lab') Computer Lab
                option(value='conference room') Conference Room
          tr
          tr
          tr
            td.Category Start Date & Time
            td
              input#sd.rad(type='datetime-local', name='startdatetime', required='true', aria-hidden='true')
          tr
          tr
          tr
            td.Category End Date & Time
            td
              input#ed.rad(type='datetime-local', name='enddatetime', required='true', aria-hidden='true')
          tr
          tr
          tr
            td.Category Venue Details
            td
              textarea.rad(rows='5', cols='26', name='venuedetails')
          tr
          tr
          tr
            td
              | Choose File:
            td
              .custom-file.mb-3
                input#customFile.custom-file-input(type='file', name='filename')
                label.custom-file-label(for='customFile') Choose file
              script.
                $(".custom-file-input").on("change", function() {
                var fileName = $(this).val().split("\\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
                });
          tr
            td.Category Budget
            td
              input.rad(type='Number', name='budget', required='true', aria-hidden='true', min=500)
              //
                <div class="""slidecontainer">
                <input type="range" min="5000" max="100000" value="52500" class="slider" id="myRange">
                <p>Value: <span id="demo"></span></p>
                </div>
                <script>
                var slider = document.getElementById("myRange");
                var output = document.getElementById("demo");
                output.innerHTML = slider.value;
                slider.oninput = function() {
                output.innerHTML = this.value;
                }
                </script>
          tr
          tr
          tr
            td.Category  Number of people
            td
              input.rad(type='Number', name='people', required='true', aria-hidden='true', min=1)
          tr
          tr
          tr
          tr
          tr
            td.Category Description
            td
              textarea.rad(rows='5', cols='26', name='description')
          tr
          tr
          tr
            td
            td
              input.button(type='submit', name='submit', onclick='myfun()', value='submit', formaction='government_submit')
            td
              input.button(type='reset', name='reset', value='reset')
